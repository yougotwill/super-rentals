<article class="listing">
    <a {{action 'toggleImageSize'}} class="image {{if isWide "wide"}}">    {{!-- Will toggle the image's size using the given method--}}
    <img src="{{rental.image}}" alt="">
    <small>View Larger</small>
    </a>
    <h3>{{#link-to "rentals.show" rental}}{{rental.title}}{{/link-to}}</h3> {{!-- links to a specific rental --}}
    <div class="detail owner">
        <span>Owner:</span> {{rental.owner}}
    </div>
    <div class="detail type">
        {{!-- Below utilizes the ES6 destructuring assignment property --}}
        <span>Type:</span> {{rental-property-type rental.category}} 
        - {{rental.category}} {{!-- This should ideally show "Type: Standalone - Estate" --}}
    </div>
    <div class="detail location">
        <span>Location:</span> {{rental.city}}
    </div>
    <div class="detail bedrooms">
        <span>Number of bedrooms:</span> {{rental.bedrooms}}
    </div>
    {{location-map location=rental.city}} {{!-- used by location-map.js --}}
</article>